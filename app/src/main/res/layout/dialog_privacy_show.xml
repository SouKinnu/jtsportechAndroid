<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp_327"
        android:layout_height="@dimen/dp_290"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/dp_6"
        app:contentPaddingLeft="@dimen/dp_15"
        app:contentPaddingRight="@dimen/dp_15"
        app:contentPaddingTop="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_centerHorizontal="true"
                android:text="用户隐私保护协议"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_layout"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_22"
                android:textColor="@color/mine_shaft"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/no_agree_btn"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/bg_privacy_gray"
                    android:text="不同意"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/agree_btn"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@drawable/bg_orange_red"
                    android:text="同意并继续"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>